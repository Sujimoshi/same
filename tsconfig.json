{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@same/*": [ "./src/*" ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}