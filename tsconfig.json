{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["types/*"],
      "@same/*": [ "./src/*" ]
    }
  },
  "include": [
    "./src/**/*", "public/index.js"
  ]
}